{% extends 'base.html.twig' %}

{% block title %}New Planning
{% endblock %}

{% block body %}

	<section class="vh-100 gradient-custom">
		<div class="container py-5 h-100">
			<div class="row justify-content-center align-items-center h-100">
				<div class="col-12 col-lg-9 col-xl-7">
					<div class="card shadow-2-strong card-registration" style="border-radius: 15px;">
						<form id="planning-form">
							<div class="card-body p-4 p-md-5">
								<h3 class="mb-4 pb-2 pb-md-0 mb-md-5">Réserver un créneau</h3>
								<div class="row">
									<div class="col-md-12 mb-4">
										<label for="datepicker" class="form-label">Nombre d'heures</label>
										<select class="form-control" name="nbHeure" id="select-heure">
											<option value="2">2 heures</option>
											<option value="3">3 heures</option>
											<option value="4">4 heures</option>
										</select>
									</div>
								</div>
								<div class="row mb-4">
									<div class="col-md-6">
										<label for="datepicker" class="form-label">Sélectionnez une date:</label>
										<input type="text" id="datepicker" class="form-control"/>
									</div>
									<div class="col-md-6">
										<label for="timepicker" class="form-label">Sélectionnez un créneau horaire:</label>
										<select id="timepicker" class="form-control"></select>
									</div>
								</div>

								<div class="d-grid gap-2 col-3 mx-auto">
									<input class="btn btn-warning" type="submit" value="Enregistrer" id="submit-form"/>
								</div>
							</div>
						</form>
					</div>
				</div>
			</div>
		</div>
	</section>

	<script src="{{ asset('js/planning.js') }}"></script>
{% endblock %}
