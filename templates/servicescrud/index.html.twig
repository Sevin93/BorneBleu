    <h3 class="text-center fw-bold">La liste des services de la Mairie Drancy </h3><br/>
</div>
<div class="d-flex justify-content-center col-4 mx-auto ">
    <table  class="table bg-light mt-2 p-3">
        <thead>
        <tr class="table-secondary">
                <th>Num√©ro</th>
                <th>Nom</th>
               
        </tr>
        </thead>
        <tbody>
        {% for service in services %}
            <tr>
                <td>{{ service.id }}</td>
                <td>{{ service.nom }}</td>
                
            </tr>
        {% else %}
            <tr>
                <td colspan="2">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
<div class="d-grid gap-2 col-3 mx-auto">
<a href="{{ path('app_servicescrud_new') }}" class="btn btn-warning" type="button">Ajouter un nouveau service</a>
</div>
   
{% endblock %}
