{% block body %}
<div class="container col-6 d-grid gap-4 mb-5">
    <div class="row">         
        <div class="card px-5 py-4">
            <div class="card-body">
                <div class="mb-3 row">

                {{ form_start(form) }}

                {% set labelClass = 'font-weight-bold' %}

                <div class="form-inline mb-4">
                    {{ form_label(form.civilite, 'Civilité :', {'label_attr': {'class': labelClass}}) }}
                    {{ form_widget(form.civilite, {'attr': {'class': 'form-control '}}) }}
                    {{ form_errors(form.civilite) }}
                </div>

                <div class="form-inline mb-4">
                    {{ form_label(form.nom, 'Nom :', {'label_attr': {'class': labelClass}}) }}
                    {{ form_widget(form.nom, {'attr': {'class': 'form-control form-control-lg '}}) }}
                </div>

                <div class="form-inline mb-4">
                    {{ form_label(form.prenom, 'Prénom :', {'label_attr': {'class': labelClass}}) }}
                    {{ form_widget(form.prenom, {'attr': {'class': 'form-control form-control-lg '}}) }}
                </div>

                <div class="form-inline mb-4">
                    {{ form_label(form.tel, 'Téléphone :', {'label_attr': {'class': labelClass}}) }}
                    {{ form_widget(form.tel, {'attr': {'class': 'form-control form-control-lg '}}) }}
                </div>
                <div class="form-inline mb-4">
                    {{ form_label(form.email, 'E-mail :', {'label_attr': {'class': labelClass}}) }}
                    {{ form_widget(form.email, {'attr': {'class': 'form-control form-control-lg '}}) }}
                </div>


                <div class="form-inline mb-4">
                    {{ form_label(form.password, 'Mot de passe :', {'label_attr': {'class': labelClass}}) }}
                    {{ form_widget(form.password, {'attr': {'class': 'form-control form-control-lg '}}) }}
                </div>


                {{ form_widget(form) }}
                <button class="btn btn-warning">{{ button_label|default('Enregistrer') }}</button>
                 

                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}